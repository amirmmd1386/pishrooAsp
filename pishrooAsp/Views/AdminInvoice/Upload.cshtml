@* Views/AdminInvoice/Upload.cshtml *@
@{
    ViewData["Title"] = "آپلود فاکتور جدید";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 p-4 md:p-6">
    <!-- هدر -->
    <div class="max-w-6xl mx-auto">
        <div class="mb-8">
            <div class="flex items-center gap-4 mb-6">
                <div class="p-3 bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">آپلود فاکتور جدید</h1>
                    <p class="text-gray-600 mt-2">ایجاد و ارسال فاکتور برای مشتریان</p>
                </div>
            </div>

            <!-- Steps -->
            <div class="flex items-center justify-center mb-10">
                <div class="flex items-center">
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-r from-blue-600 to-blue-700 text-white flex items-center justify-center shadow-lg">
                            <span class="font-bold">1</span>
                        </div>
                        <span class="mt-2 text-sm font-medium text-blue-700">اطلاعات</span>
                    </div>
                    <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-blue-200 mx-2"></div>
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 rounded-full bg-blue-200 text-gray-600 flex items-center justify-center">
                            <span class="font-bold">2</span>
                        </div>
                        <span class="mt-2 text-sm font-medium text-gray-500">بارگذاری</span>
                    </div>
                    <div class="w-24 h-1 bg-gray-200 mx-2"></div>
                    <div class="flex flex-col items-center">
                        <div class="w-12 h-12 rounded-full bg-gray-200 text-gray-600 flex items-center justify-center">
                            <span class="font-bold">3</span>
                        </div>
                        <span class="mt-2 text-sm font-medium text-gray-500">ارسال</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- فرم اصلی -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- فرم سمت راست -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-1 bg-gradient-to-r from-blue-600 via-blue-500 to-blue-600"></div>

                    <div class="p-8">
                        <form asp-action="Upload" method="post" enctype="multipart/form-data" id="uploadForm" class="space-y-6">
                            <!-- ردیف اول -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- کد پیگیری -->
                                <div class="group">
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                            </svg>
                                            کد پیگیری
                                        </span>
                                    </label>
                                    <div class="relative">
                                        <input type="text" name="trackingCode"
                                               value="@ViewBag.DefaultTrackingCode"
                                               required
                                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all duration-300 group-hover:shadow-md" />
                                        <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                            <button type="button" onclick="generateNewCode()"
                                                    class="p-2 text-gray-400 hover:text-blue-600 transition-colors"
                                                    title="تولید کد جدید">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                    <p class="mt-2 text-xs text-gray-500">این کد در پیامک به مشتری ارسال می‌شود</p>
                                </div>

                                <!-- مبلغ -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            مبلغ (تومان)
                                        </span>
                                    </label>
                                    <div class="relative">
                                        <input type="number" name="amount"
                                               required
                                               class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition-all duration-300" />
                                        <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                            <span class="text-gray-500"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ردیف دوم -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <!-- نام مشتری -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                            نام مشتری
                                        </span>
                                    </label>
                                    <input type="text" name="customerName"
                                           required
                                           class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 outline-none transition-all duration-300" />
                                </div>

                                <!-- تلفن مشتری -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                        <span class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                            </svg>
                                            تلفن مشتری
                                        </span>
                                    </label>
                                    <div class="relative">
                                        <input type="tel" name="customerPhone"
                                               placeholder="۰۹۱۲۳۴۵۶۷۸۹"
                                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none transition-all duration-300" />
                                        <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                            <span class="text-gray-400"></span>
                                        </div>
                                    </div>
                                    <p class="mt-2 text-xs text-red-500">برای ارسال پیامک ضروری است</p>
                                </div>
                            </div>

                       

                            <!-- توضیحات -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <span class="flex items-center gap-2">
                                        <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                                        </svg>
                                        توضیحات
                                    </span>
                                </label>
                                <textarea name="description"
                                          rows="3"
                                          class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all duration-300 resize-none"></textarea>
                            </div>

                            <!-- آپلود فایل -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <span class="flex items-center gap-2">
                                        <svg class="w-4 h-4 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                                        </svg>
                                        فایل فاکتور
                                    </span>
                                </label>

                                <div class="mt-2">
                                    <div id="fileUploadArea"
                                         class="file-upload-area border-3 border-dashed border-gray-300 rounded-2xl p-8 text-center cursor-pointer transition-all duration-300 hover:border-blue-400 hover:bg-blue-50">
                                        <input type="file" name="invoiceFile"
                                               accept=".pdf,.jpg,.jpeg,.png"
                                               required
                                               id="fileInput"
                                               class="hidden" />

                                        <div class="py-10">
                                            <div class="mx-auto w-16 h-16 mb-4">
                                                <svg class="w-full h-full text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                                          d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                                </svg>
                                            </div>

                                            <div class="space-y-2">
                                                <p class="text-lg font-medium text-gray-700">فایل فاکتور را اینجا رها کنید</p>
                                                <p class="text-sm text-gray-500">یا برای انتخاب فایل کلیک کنید</p>
                                                <p class="text-xs text-gray-400 mt-4">فرمت‌های مجاز: PDF, JPG, PNG • حداکثر 10MB</p>
                                            </div>

                                            <button type="button" onclick="document.getElementById('fileInput').click()"
                                                    class="mt-6 px-6 py-2 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-lg transition-all duration-300 transform hover:scale-105">
                                                انتخاب فایل
                                            </button>
                                        </div>
                                    </div>

                                    <div id="fileInfo" class="hidden mt-4">
                                        <div class="flex items-center justify-between bg-green-50 border border-green-200 rounded-xl p-4">
                                            <div class="flex items-center gap-3">
                                                <div class="p-2 bg-green-100 rounded-lg">
                                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p id="fileName" class="font-medium text-gray-800"></p>
                                                    <p id="fileSize" class="text-sm text-gray-600"></p>
                                                </div>
                                            </div>
                                            <button type="button" onclick="removeFile()"
                                                    class="p-2 text-gray-400 hover:text-red-500 transition-colors">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M6 18L18 6M6 6l12 12" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- دکمه ارسال -->
                            <div class="pt-6">
                                <button type="submit"
                                        id="submitBtn"
                                        class="w-full py-4 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                    <span class="flex items-center justify-center gap-3">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                                        </svg>
                                        آپلود فاکتور و ادامه
                                    </span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- پنل سمت چپ -->
            <div class="space-y-6">
                <!-- کارت پیش‌نمایش -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-1 bg-gradient-to-r from-purple-500 to-pink-500"></div>
                    <div class="p-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            پیش‌نمایش فاکتور
                        </h3>

                        <div class="space-y-4">
                            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600">کد پیگیری:</span>
                                <code id="previewCode" class="font-mono font-bold text-blue-600">@ViewBag.DefaultTrackingCode</code>
                            </div>

                            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600">مشتری:</span>
                                <span id="previewCustomer" class="font-medium text-gray-800">-</span>
                            </div>

                            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600">مبلغ:</span>
                                <span id="previewAmount" class="font-bold text-green-600">- تومان</span>
                            </div>

                            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600">تلفن:</span>
                                <span id="previewPhone" class="font-medium text-gray-800 dir-ltr">-</span>
                            </div>
                        </div>

                        <div class="mt-6 p-4 bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl">
                            <p class="text-sm text-gray-700">
                                <svg class="w-4 h-4 inline-block ml-1 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                بعد از آپلود، لینک اختصاصی دریافت می‌کنید
                            </p>
                        </div>
                    </div>
                </div>

                <!-- راهنما -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                    <div class="p-1 bg-gradient-to-r from-green-500 to-emerald-500"></div>
                    <div class="p-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                            </svg>
                            نکات مهم
                        </h3>

                        <div class="space-y-3">
                            <div class="flex items-start gap-3">
                                <div class="p-1 bg-green-100 rounded-lg">
                                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-600">کد پیگیری باید منحصر به فرد باشد</p>
                            </div>

                            <div class="flex items-start gap-3">
                                <div class="p-1 bg-blue-100 rounded-lg">
                                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-600">فقط فرمت‌های PDF و تصویر مجاز هستند</p>
                            </div>

                            <div class="flex items-start gap-3">
                                <div class="p-1 bg-purple-100 rounded-lg">
                                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-600">حداکثر حجم فایل: ۱۰ مگابایت</p>
                            </div>

                            <div class="flex items-start gap-3">
                                <div class="p-1 bg-yellow-100 rounded-lg">
                                    <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-600">برای ارسال پیامک، شماره تلفن ضروری است</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- آمار -->
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-2xl shadow-xl p-6 text-white">
                    <h3 class="text-lg font-bold mb-4">آمار امروز</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <span>فاکتورهای آپلود شده:</span>
                            <span class="text-2xl font-bold">۰</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span>پیامک ارسال شده:</span>
                            <span class="text-2xl font-bold">۰</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span>مشتریان جدید:</span>
                            <span class="text-2xl font-bold">۰</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ایجاد کد پیگیری جدید
        function generateNewCode() {
            const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ0123456789';
            let code = '';
            for (let i = 0; i < 8; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }

            document.querySelector('input[name="trackingCode"]').value = code;
            document.getElementById('previewCode').textContent = code;

            // انیمیشن
            const preview = document.getElementById('previewCode');
            preview.classList.add('animate-pulse');
            setTimeout(() => preview.classList.remove('animate-pulse'), 500);
        }

        // مدیریت آپلود فایل
        const fileInput = document.getElementById('fileInput');
        const fileUploadArea = document.getElementById('fileUploadArea');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');

        // Drag and Drop
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            fileUploadArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            fileUploadArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            fileUploadArea.addEventListener(eventName, unhighlight, false);
        });

        function highlight() {
            fileUploadArea.classList.add('border-blue-500', 'bg-blue-50');
        }

        function unhighlight() {
            fileUploadArea.classList.remove('border-blue-500', 'bg-blue-50');
        }

        fileUploadArea.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFiles(files);
        }

        fileInput.addEventListener('change', function(e) {
            handleFiles(this.files);
        });

        function handleFiles(files) {
            if (files.length > 0) {
                const file = files[0];

                // اعتبارسنجی نوع فایل
                const allowedTypes = ['application/pdf', 'image/jpeg', 'image/png'];
                if (!allowedTypes.includes(file.type)) {
                    alert('فرمت فایل مجاز نیست! فقط PDF و تصویر قابل قبول است.');
                    return;
                }

                // اعتبارسنجی حجم فایل (10MB)
                const maxSize = 10 * 1024 * 1024;
                if (file.size > maxSize) {
                    alert('حجم فایل نباید بیشتر از ۱۰ مگابایت باشد!');
                    return;
                }

                // نمایش اطلاعات فایل
                fileName.textContent = file.name;
                fileSize.textContent = formatFileSize(file.size);
                fileInfo.classList.remove('hidden');

                // تغییر ظاهر آپلود
                fileUploadArea.classList.add('hidden');
            }
        }

        function removeFile() {
            fileInput.value = '';
            fileInfo.classList.add('hidden');
            fileUploadArea.classList.remove('hidden');
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // پیش‌نمایش داده‌ها
        document.querySelectorAll('input, textarea').forEach(element => {
            element.addEventListener('input', updatePreview);
        });

        function updatePreview() {
            // کد پیگیری
            const codeInput = document.querySelector('input[name="trackingCode"]');
            if (codeInput.value) {
                document.getElementById('previewCode').textContent = codeInput.value;
            }

            // نام مشتری
            const nameInput = document.querySelector('input[name="customerName"]');
            if (nameInput.value) {
                document.getElementById('previewCustomer').textContent = nameInput.value;
            }

            // مبلغ
            const amountInput = document.querySelector('input[name="amount"]');
            if (amountInput.value) {
                const formatted = new Intl.NumberFormat('fa-IR').format(amountInput.value);
                document.getElementById('previewAmount').textContent = formatted + ' تومان';
            }

            // تلفن
            const phoneInput = document.querySelector('input[name="customerPhone"]');
            if (phoneInput.value) {
                document.getElementById('previewPhone').textContent = phoneInput.value;
            }
        }

        // ارسال فرم
        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
