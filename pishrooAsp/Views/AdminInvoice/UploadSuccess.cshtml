@* Views/AdminInvoice/UploadSuccess.cshtml *@
@{
    ViewData["Title"] = "فاکتور با موفقیت آپلود شد";
    var trackingUrl = ViewBag.TrackingUrl as string;
    var trackingCode = ViewBag.TrackingCode as string;
    var invoiceId = ViewBag.InvoiceId as int?;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-check-circle"></i> فاکتور با موفقیت آپلود شد</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h5><i class="fas fa-check"></i> عملیات با موفقیت انجام شد</h5>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">لینک پیگیری فاکتور</h5>
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="text" id="trackingUrl" class="form-control"
                                       value="@trackingUrl" readonly />
                                <button class="btn btn-outline-primary" onclick="copyTrackingUrl()">
                                    <i class="fas fa-copy"></i> کپی لینک
                                </button>
                            </div>
                            <small class="text-muted">این لینک را برای مشتری ارسال کنید</small>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">کد پیگیری</h5>
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="text" id="trackingCode" class="form-control"
                                       value="@trackingCode" readonly />
                                <button class="btn btn-outline-secondary" onclick="copyTrackingCode()">
                                    <i class="fas fa-copy"></i> کپی کد
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (invoiceId.HasValue)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">ارسال پیامک به مشتری</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <textarea id="smsMessage" class="form-control" rows="3">
فاکتور شما آماده است
کد پیگیری: @trackingCode
لینک مشاهده: @trackingUrl
لطفاً برای دانلود مراجعه کنید
                                    </textarea>
                                </div>
                                <button class="btn btn-success w-100" onclick="sendSms(@invoiceId.Value)">
                                    <i class="fas fa-paper-plane"></i> ارسال پیامک
                                </button>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a asp-action="Upload" class="btn btn-outline-primary">
                            <i class="fas fa-plus"></i> فاکتور جدید
                        </a>
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-list"></i> مشاهده همه فاکتورها
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyTrackingUrl() {
            var copyText = document.getElementById("trackingUrl");
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(copyText.value);

            showToast('لینک با موفقیت کپی شد', 'success');
        }

        function copyTrackingCode() {
            var copyText = document.getElementById("trackingCode");
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(copyText.value);

            showToast('کد پیگیری کپی شد', 'success');
        }

        function sendSms(invoiceId) {
            var message = document.getElementById("smsMessage").value;

            if (!confirm('آیا از ارسال پیامک اطمینان دارید؟')) {
                return;
            }

            $.post('@Url.Action("SendSms", "AdminInvoice")', {
                invoiceId: invoiceId,
                message: message
            }, function(data) {
                if (data.success) {
                    showToast('پیامک با موفقیت ارسال شد', 'success');
                } else {
                    showToast(data.message, 'error');
                }
            }).fail(function() {
                showToast('خطا در ارسال درخواست', 'error');
            });
        }

        function showToast(message, type) {
            // استفاده از toastr یا alert ساده
            alert(message);
        }
    </script>
}