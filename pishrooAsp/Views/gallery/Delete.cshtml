@model pishrooAsp.Models.GalleryImage

@{
    ViewData["Title"] = "حذف تصویر";
    Layout = "_AdminLayout";

}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold mb-6">@ViewData["Title"]</h1>

    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-red-600 mb-4">آیا از حذف این تصویر اطمینان دارید؟</h3>

        <div class="mb-4">
            <img src="@Model.FilePath" alt="@Model.Title" class="w-full h-64 object-contain rounded-lg border">
        </div>

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div>
                <dt class="font-semibold">عنوان:</dt>
                <dd>@Model.Title</dd>
            </div>
            <div>
                <dt class="font-semibold">تاریخ آپلود:</dt>
                <dd>@Model.UploadDate</dd>
            </div>
            <div>
                <dt class="font-semibold">حجم فایل:</dt>
                <dd>@(Model.FileSize / 1024) KB</dd>
            </div>
            <div>
                <dt class="font-semibold">توضیحات:</dt>
                <dd>@Model.Description</dd>
            </div>
        </dl>

        <form asp-action="Delete" class="flex justify-end space-x-2 space-x-reverse">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition">انصراف</a>
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">حذف</button>
        </form>
    </div>
</div>