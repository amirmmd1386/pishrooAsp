@model pishrooAsp.Models.GalleryImage

@{
    ViewData["Title"] = "افزودن تصویر جدید";
    Layout = "_AdminLayout";

}

<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold mb-6">@ViewData["Title"]</h1>

    <form asp-action="Create" enctype="multipart/form-data" class="bg-white rounded-lg shadow-md p-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Title" class="block text-gray-700 mb-2"></label>
            <input asp-for="Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="block text-gray-700 mb-2"></label>
            <textarea asp-for="Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 mb-2">تصویر</label>
            <input type="file" name="imageFile" accept="image/*" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
            <p class="text-gray-500 text-sm mt-1">فرمت‌های مجاز: jpg, jpeg, png, gif - حداکثر حجم: 5MB</p>
        </div>

        <div class="flex justify-end space-x-2 space-x-reverse">
            <a asp-action="Index" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400 transition">انصراف</a>
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">ذخیره</button>
        </div>
    </form>
</div>