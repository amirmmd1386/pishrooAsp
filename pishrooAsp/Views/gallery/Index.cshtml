@model IEnumerable<pishrooAsp.Models.GalleryImage>

@{
    ViewData["Title"] = "مدیریت گالری تصاویر";
    Layout = "_AdminLayout";

}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">@ViewData["Title"]</h1>
        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">افزودن تصویر جدید</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="@item.FilePath" alt="@item.Title" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-lg font-semibold mb-2">@item.Title</h3>
                    <p class="text-gray-600 mb-4">@item.Description</p>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500">@item.UploadDate</span>
                        <span class="text-sm text-gray-500">@(item.FileSize / 1024) KB</span>
                    </div>
                    <div class="mt-4 flex space-x-2 space-x-reverse">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-800">ویرایش</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800">حذف</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>