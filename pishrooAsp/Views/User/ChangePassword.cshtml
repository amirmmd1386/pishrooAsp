@model ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
    Layout = "_AdminLayout";
}

<div class="min-h-screen bg-gray-50">
    <div class="bg-white border-b">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">تغییر رمز عبور</h1>
                    <p class="text-gray-500 mt-1">کاربر: @Model.Username</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn-secondary flex items-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        بازگشت
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="bg-white rounded-xl border p-6">
            @if (TempData["Success"] != null)
            {
                <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="mr-3">
                            <p class="text-sm text-green-800">@TempData["Success"]</p>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div class="mr-3">
                            <h3 class="text-sm font-medium text-red-800">خطاهای زیر را بررسی کنید:</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <ul class="list-disc pr-5 space-y-1">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <form asp-action="ChangePassword" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Username" />

                <div class="space-y-6">
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="NewPassword"
                               class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               type="password"
                               placeholder="رمز عبور جدید" />
                        <span asp-validation-for="NewPassword" class="text-red-500 text-sm mt-1"></span>
                        <p class="text-xs text-gray-500 mt-1">رمز عبور باید حداقل ۶ کاراکتر باشد</p>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="ConfirmPassword"
                               class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               type="password"
                               placeholder="تکرار رمز عبور جدید" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <div class="flex space-x-4 space-x-reverse mt-8 pt-6 border-t">
                    <button type="submit"
                            class="btn-primary flex-1">
                        تغییر رمز عبور
                    </button>
                    <a asp-action="Index"
                       class="btn-secondary flex-1 text-center">
                        انصراف
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}