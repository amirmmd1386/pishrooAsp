@{
    Layout = null;
    ViewData["Title"] = "صفحه یافت نشد - اروین پلیمر";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    @* <link href="https://cdn.jsdelivr.net/npm/vazir-font@30.1.0/dist/font-face.css" rel="stylesheet"> *@
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"> *@
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #2c3e50;
            --secondary: #3498db;
            --accent: #e74c3c;
            --light: #ecf0f1;
            --dark: #1a1a2e;
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            font-family: 'Vazir', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: var(--dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

        /* Geometric Background */
        .geometric-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.15;
            z-index: -1;
            background-image: radial-gradient(circle at 10% 20%, rgba(52, 152, 219, 0.2) 0%, transparent 20%), radial-gradient(circle at 90% 80%, rgba(231, 76, 60, 0.2) 0%, transparent 20%);
        }

        .geometric-shape {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(45deg, var(--secondary), transparent);
            animation: float 20s infinite linear;
            z-index: -1;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            top: -100px;
            right: -100px;
            background: linear-gradient(45deg, rgba(52, 152, 219, 0.1), transparent);
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            bottom: -50px;
            left: -50px;
            background: linear-gradient(45deg, rgba(231, 76, 60, 0.1), transparent);
            animation-delay: -10s;
        }

        /* Main Container */
        .main-container {
            text-align: center;
            max-width: 800px;
            width: 100%;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.6);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.8);
            animation: fadeIn 0.8s ease-out;
        }

        /* Creative 404 Design */
        .error-design {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 0 auto 40px;
        }

        .error-circle {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--secondary), #2980b9);
            position: relative;
            animation: rotate 20s infinite linear;
            box-shadow: 0 10px 30px rgba(52, 152, 219, 0.3), inset 0 4px 0 rgba(255, 255, 255, 0.3);
        }

        .error-number {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 70px;
            font-weight: 900;
            color: white;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 2;
        }

        .error-dots {
            position: absolute;
            width: 100%;
            height: 100%;
            animation: rotateReverse 15s infinite linear;
        }

        .dot {
            position: absolute;
            width: 12px;
            height: 12px;
            background: var(--accent);
            border-radius: 50%;
            box-shadow: 0 0 10px var(--accent);
        }

            .dot:nth-child(1) {
                top: 0;
                left: 50%;
                transform: translateX(-50%);
            }

            .dot:nth-child(2) {
                top: 50%;
                right: 0;
                transform: translateY(-50%);
            }

            .dot:nth-child(3) {
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
            }

            .dot:nth-child(4) {
                top: 50%;
                left: 0;
                transform: translateY(-50%);
            }

        /* Content Styling */
        .error-title {
            font-size: 2.8rem;
            color: var(--primary);
            margin-bottom: 20px;
            font-weight: 700;
            position: relative;
            display: inline-block;
        }

            .error-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                right: 50%;
                transform: translateX(50%);
                width: 100px;
                height: 3px;
                background: linear-gradient(to right, transparent, var(--secondary), transparent);
                border-radius: 3px;
            }

        .error-message {
            font-size: 1.2rem;
            color: #666;
            line-height: 1.8;
            margin-bottom: 40px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .company-name {
            color: var(--secondary);
            font-weight: 700;
            position: relative;
        }

        /* Single Creative Link */
        .home-link {
            display: inline-flex;
            align-items: center;
            gap: 15px;
            padding: 18px 45px;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            background: linear-gradient(135deg, var(--secondary), var(--primary));
            border: none;
            border-radius: 50px;
            text-decoration: none;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(52, 152, 219, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }

            .home-link:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(52, 152, 219, 0.4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
                color: white;
            }

            .home-link:active {
                transform: translateY(-1px);
            }

            .home-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.7s ease;
            }

            .home-link:hover::before {
                left: 100%;
            }

            .home-link i {
                font-size: 1.3rem;
                transition: transform 0.3s ease;
            }

            .home-link:hover i {
                transform: translateX(-5px);
            }

        /* Footer Logo */
        .footer-logo {
            margin-top: 50px;
            text-align: center;
        }

        .logo {
            height: 60px;
            filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.1));
            transition: all 0.3s ease;
        }

            .logo:hover {
                transform: scale(1.05);
                filter: drop-shadow(0 8px 20px rgba(52, 152, 219, 0.3));
            }

        .logo-text {
            margin-top: 15px;
            color: var(--primary);
            font-size: 0.9rem;
            opacity: 0.8;
        }

        /* Animations */
        @@keyframes rotate {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }

        }

        @@keyframes rotateReverse {
            from

        {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(-360deg);
        }

        }

        @@keyframes float {
            0%, 100%

        {
            transform: translate(0, 0) rotate(0deg);
        }

        33% {
            transform: translate(30px, -30px) rotate(120deg);
        }

        66% {
            transform: translate(-20px, 20px) rotate(240deg);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        }

        @@keyframes pulse {
            0%, 100%

        {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }

        }

        /* Decorative Elements */
        .decorative-line {
            height: 2px;
            width: 100px;
            background: linear-gradient(to right, transparent, var(--secondary), transparent);
            margin: 30px auto;
            border-radius: 2px;
            animation: pulse 2s infinite ease-in-out;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .main-container

        {
            padding: 30px 20px;
            margin: 0 15px;
        }

        .error-title {
            font-size: 2.2rem;
        }

        .error-design {
            width: 150px;
            height: 150px;
        }

        .error-number {
            font-size: 50px;
        }

        .home-link {
            padding: 15px 35px;
            font-size: 1rem;
        }

        }

        @@media (max-width: 480px) {
            .error-title

        {
            font-size: 1.8rem;
        }

        .error-message {
            font-size: 1rem;
        }

        .error-design {
            width: 120px;
            height: 120px;
            margin-bottom: 30px;
        }

        .error-number {
            font-size: 40px;
        }

        }

        /* Micro-interactions */
        .home-link:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.3), 0 10px 30px rgba(52, 152, 219, 0.3);
        }
    </style>
</head>
<body>
    <!-- Geometric Background -->
    <div class="geometric-bg"></div>
    <div class="geometric-shape shape-1"></div>
    <div class="geometric-shape shape-2"></div>

    <!-- Main Content -->
    <div class="main-container">
        <!-- Creative 404 Design -->
        <div class="error-design">
            <div class="error-circle"></div>
            <div class="error-number">404</div>
            <div class="error-dots">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>

        <!-- Title -->
        <h1 class="error-title">صفحه مورد نظر یافت نشد</h1>

        <!-- Decorative Line -->
        <div class="decorative-line"></div>

        <!-- Message -->
        <p class="error-message">
            صفحه‌ای که به دنبال آن هستید وجود ندارد یا منتقل شده است.
            <br>
            لطفاً از طریق لینک زیر به <span class="company-name">اروین پلیمر</span> بازگردید.
        </p>

        <!-- Single Creative Link -->
        <a href="/" class="home-link">
            <i class="fas fa-arrow-left"></i>
            بازگشت به صفحه اصلی
        </a>
    </div>

    <!-- Footer Logo -->
    <div class="footer-logo">
        <img src="" alt="اروین پلیمر" class="logo"
      >
        <div class="logo-text">پیشرو در صنعت پلیمر</div>
    </div>

    <script>
        // Add smooth micro-interactions
        document.addEventListener('DOMContentLoaded', function() {
            const link = document.querySelector('.home-link');

            // Add ripple effect on click
            link.addEventListener('click', function(e) {
                const circle = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                circle.style.cssText = `
                    position: absolute;
                    border-radius: 50%;
                    background: rgba(255, 255, 255, 0.6);
                    transform: scale(0);
                    animation: ripple 0.6s linear;
                    width: ${size}px;
                    height: ${size}px;
                    top: ${y}px;
                    left: ${x}px;
                    pointer-events: none;
                `;

                this.appendChild(circle);

                setTimeout(() => circle.remove(), 600);
            });

            // Add CSS for ripple
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes ripple {
                    to {
                        transform: scale(4);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(style);

            // Parallax effect on mouse move
            document.addEventListener('mousemove', (e) => {
                const x = (e.clientX / window.innerWidth - 0.5) * 20;
                const y = (e.clientY / window.innerHeight - 0.5) * 20;

                const container = document.querySelector('.main-container');
                container.style.transform =
                    `perspective(1000px) rotateY(${x}deg) rotateX(${-y}deg)`;
            });

            // Reset transform on mouse leave
            document.body.addEventListener('mouseleave', () => {
                const container = document.querySelector('.main-container');
                container.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg)';
            });
        });
    </script>
</body>
</html>