@model pishrooAsp.ModelViewer.Invoices.TrackingViewModel

@{
    ViewData["Title"] = "پیگیری فاکتور";
    Layout = "_Layout";
}

<div class="min-h-screen bg-slate-50 flex items-start justify-center py-14 px-4">
    <div class="w-full max-w-4xl">
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">

            <!-- Header -->
            <div class="bg-gradient-to-l from-blue-600 to-indigo-600 px-6 py-4">
                <h1 class="text-white text-xl font-bold">
                    پیگیری فاکتور و صورت‌حساب
                </h1>
            </div>

            <!-- Body -->
            <div class="p-6 space-y-6">

                <!-- Form -->
                <form asp-action="Index" method="post" class="space-y-4">
                    <div>
                        <label asp-for="TrackingCode" class="block text-sm font-medium text-slate-700 mb-1"></label>
                        <input asp-for="TrackingCode"
                               id="TrackingCode"
                               class="w-full rounded-xl border border-slate-300 px-4 py-3 text-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                               placeholder="کد پیگیری یا شماره سفارش را وارد کنید" />
                        <span asp-validation-for="TrackingCode" class="text-red-600 text-sm mt-1 block"></span>
                        <p class="text-xs text-slate-500 mt-1">
                            کد پیگیری ارسال‌شده از طریق پیامک یا ایمیل را وارد کنید
                        </p>
                    </div>

                    <button type="submit"
                            class="w-full rounded-xl bg-blue-600 hover:bg-blue-700 text-white py-3 font-semibold transition">
                        🔍 جستجو
                    </button>
                </form>

                <!-- Results -->
                @if (Model.ShowResults)
                {
                    <div class="border-t pt-6 space-y-4">

                        <div class="rounded-xl bg-green-50 border border-green-200 p-4 text-green-700">
                            ✅ <strong>@Model.Invoices.Count</strong> فاکتور یافت شد
                        </div>

                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-right border border-slate-200 rounded-xl overflow-hidden">
                                <thead class="bg-slate-100 text-slate-700">
                                    <tr>
                                        <th class="px-4 py-3">#</th>
                                        <th class="px-4 py-3">تاریخ</th>
                                        <th class="px-4 py-3">مشتری</th>
                                        <th class="px-4 py-3">مبلغ</th>
                                        <th class="px-4 py-3">توضیحات</th>
                                        <th class="px-4 py-3 text-center">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y">
                                    @for (int i = 0; i < Model.Invoices.Count; i++)
                                    {
                                        var invoice = Model.Invoices[i];
                                        <tr class="hover:bg-slate-50">
                                            <td class="px-4 py-3">@((i + 1))</td>
                                            <td class="px-4 py-3">@invoice.InvoiceDate.ToString("yyyy/MM/dd")</td>
                                            <td class="px-4 py-3">@invoice.CustomerName</td>
                                            <td class="px-4 py-3 font-semibold">
                                                @invoice.Amount.ToString("N0") تومان
                                            </td>
                                            <td class="px-4 py-3">@invoice.Description</td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="flex justify-center gap-2">
                                                    <a asp-action="Preview"
                                                       asp-route-id="@invoice.Id"
                                                       asp-route-trackingCode="@invoice.TrackingCode"
                                                       target="_blank"
                                                       class="px-3 py-1.5 rounded-lg border border-blue-500 text-blue-600 hover:bg-blue-50 text-xs">
                                                        👁 مشاهده
                                                    </a>

                                                    <a asp-action="Download"
                                                       asp-route-id="@invoice.Id"
                                                       asp-route-trackingCode="@invoice.TrackingCode"
                                                       class="px-3 py-1.5 rounded-lg border border-green-500 text-green-600 hover:bg-green-50 text-xs">
                                                        ⬇ دانلود
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="rounded-xl bg-blue-50 border border-blue-200 p-4 text-blue-700 text-sm">
                            ℹ️ فاکتورهای شما فقط با این کد پیگیری قابل مشاهده هستند.
                            لطفاً آن را محرمانه نگه دارید.
                        </div>
                    </div>
                }

                <!-- Error -->
                @if (TempData["Error"] != null)
                {
                    <div class="rounded-xl bg-red-50 border border-red-200 p-4 text-red-700">
                        ❌ @TempData["Error"]
                    </div>
                }
            </div>

            <!-- Footer -->
            <div class="bg-slate-50 border-t px-6 py-4 text-center text-xs text-slate-600">
                پشتیبانی:
                <a href="tel:02112345678" class="text-blue-600 hover:underline">
                    021-12345678
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            var savedCode = localStorage.getItem('lastTrackingCode');
            if (savedCode) {
                $('#TrackingCode').val(savedCode);
            }

            $('form').submit(function () {
                var code = $('#TrackingCode').val();
                if (code) {
                    localStorage.setItem('lastTrackingCode', code);
                }
            });
        });
    </script>
}
