
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary Meta Tags -->
    <title>@(ViewBag.MetaTitle ?? "اروین پلیمر | تولید کننده انواع محصولات پلیمری و صنعتی")</title>
    <meta name="description" content="@(ViewBag.MetaDescription ?? "شرکت اروین پلیمر تولید کننده تخصصی انواع محصولات پلیمری، لوله و اتصالات، ورق‌های پلیمری و قطعات صنعتی با کیفیت بالا و قیمت مناسب")">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="@(ViewBag.OgType ?? "website")">
    <meta property="og:url" content="@(ViewBag.CanonicalUrl ?? "https://ervinpolymer.com")@Context.Request.Path">
    <meta property="og:title" content="@(ViewBag.OgTitle ?? ViewBag.MetaTitle ?? "اروین پلیمر | تولید کننده انواع محصولات پلیمری و صنعتی")">
    <meta property="og:description" content="@(ViewBag.OgDescription ?? ViewBag.MetaDescription ?? "شرکت اروین پلیمر تولید کننده تخصصی انواع محصولات پلیمری، لوله و اتصالات، ورق‌های پلیمری و قطعات صنعتی")">
    <meta property="og:image" content="@(ViewBag.OgImage ?? "/image/companyLogo.png")">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="@(ViewBag.CanonicalUrl ?? "https://ervinpolymer.com")@Context.Request.Path">
    <meta property="twitter:title" content="@(ViewBag.TwitterTitle ?? ViewBag.MetaTitle ?? "اروین پلیمر | تولید کننده انواع محصولات پلیمری و صنعتی")">
    <meta property="twitter:description" content="@(ViewBag.TwitterDescription ?? ViewBag.MetaDescription ?? "شرکت اروین پلیمر تولید کننده تخصصی انواع محصولات پلیمری، لوله و اتصالات، ورق‌های پلیمری و قطعات صنعتی")">
    <meta property="twitter:image" content="@(ViewBag.TwitterImage ?? ViewBag.OgImage ?? "/image/companyLogo.png")">

    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewBag.CanonicalUrl ?? "")@Context.Request.Path">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/image/companyLogo.png">

    <!-- SEO Meta Tags -->
    <meta name="keywords" content="@(ViewBag.MetaKeywords ?? "پلیمر, لوله پلیمری, اتصالات پلیمری, ورق پلیمری, اروین پلیمر, محصولات صنعتی, پلی اتیلن, پی وی سی")">
    <meta name="author" content="Ervin Polymer Co.">
    <meta name="robots" content="@(ViewBag.Robots ?? "index, follow")">
    <meta name="googlebot" content="@(ViewBag.Googlebot ?? "index, follow")">
    <meta name="revisit-after" content="7 days">

    <!-- Geo Meta Tags -->
    <meta name="geo.region" content="IR">
    <meta name="geo.placename" content="Tehran">

    <!-- Language Meta Tags -->
    <meta name="language" content="Persian">
    <meta http-equiv="content-language" content="fa">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Google Fonts - Inter for general text, Vazirmatn for Persian -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Vazirmatn:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)


</head>
@{
    // var langs = _context.Langs.ToList();
    // var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
    if (ViewBag.dir == null) ViewBag.dir = true;
}

<body class="custom-white text-custom-dark-gray" dir=@(ViewBag.dir?"rtl":"ltr")>


    @await Component.InvokeAsync("Navbar")
   

            @RenderBody()
     

    <!-- Footer -->
    @await Component.InvokeAsync("Footer")



    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
