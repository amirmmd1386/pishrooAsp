@model List<pishrooAsp.Models.Background>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6">
    <h2 class="text-2xl font-bold mb-4">مدیریت بکگراندها</h2>

    <a asp-action="Create" class="px-4 py-2 bg-blue-500 text-white rounded">➕ افزودن بکگراند جدید</a>

    <table class="w-full mt-6 border-collapse border">
        <thead>
            <tr class="bg-gray-100">
                <th class="border p-2">تصویر</th>
                <th class="border p-2">عنوان</th>
                <th class="border p-2">وضعیت</th>
                <th class="border p-2">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border p-2 text-center">
                        <img src="@item.FilePath" class="w-32 h-20 object-cover rounded" />
                    </td>
                    <td class="border p-2">@item.Title</td>
                    <td class="border p-2">
                        @if (item.IsActive)
                        {
                            <span class="px-2 py-1 text-xs bg-green-100 text-green-700 rounded">فعال</span>
                        }
                        else
                        {
                            <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded">غیرفعال</span>
                        }
                    </td>
                    <td class="border p-2 flex gap-2">
                        <form asp-action="Toggle" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="px-3 py-1 bg-yellow-500 text-white rounded">
                                تغییر وضعیت
                            </button>
                        </form>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('مطمئنید؟');">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded">
                                حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
