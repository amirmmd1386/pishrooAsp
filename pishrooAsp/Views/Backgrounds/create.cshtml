@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6">
    <h2 class="text-2xl font-bold mb-4">➕ افزودن بکگراند جدید</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-4">
        <div>
            <label class="block mb-1">عنوان اجباری</label>
            <input type="text" name="Title" class="w-full border rounded px-3 py-2" required/>
        </div>

        <div>
            <label class="block mb-1">انتخاب فایل</label>
            <input type="file" name="UploadFile" class="w-full border rounded px-3 py-2" required />
        </div>

        <button type="submit" class="px-5 py-2 bg-blue-600 text-white rounded">
            ذخیره
        </button>
    </form>
</div>
