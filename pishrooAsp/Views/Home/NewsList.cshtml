<section class="last-news-section py-16 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="container mx-auto px-4">
        <!-- هدر بخش اخبار -->
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-600 rounded-full mb-4">
                <i class="fas fa-newspaper text-2xl text-white"></i>
            </div>
            <h2 class="text-4xl font-black text-blue-800 mb-4">@lastNewsTitle</h2>
            <div class="w-24 h-2 bg-green-500 rounded-full mx-auto mb-4"></div>
            <p class="text-xl text-gray-600">@lastNewsDesc</p>
        </div>

        <nav class="mb-8" aria-label="breadcrumb">
            <div class="relative">
                <div class="absolute right-0 top-1/2 w-full h-0.5 bg-gradient-to-l from-blue-100 to-gray-100 transform -translate-y-1/2 z-0"></div>

                <ol class="flex items-center space-x-3 space-x-reverse relative z-10">
                    <!-- آیتم اول (خانه) -->
                    <li>
                        <a href="/@lang" class="group flex items-center transition-all duration-200">
                            <span class="flex items-center justify-center w-8 h-8 rounded-full bg-blue-50 group-hover:bg-blue-100 transition-colors duration-200">
                                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                                </svg>
                            </span>
                            <span class="mr-2 font-medium text-gray-700 group-hover:text-blue-600 transition-colors duration-200">@homePage</span>
                        </a>
                    </li>

                    <!-- جداکننده -->
                    <li class="flex items-center">
                        <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </li>

                    <!-- آیتم دوم (اخبار) -->
                    <li>
                        <a href="/@lang/newses" class="group flex items-center transition-all duration-200">
                            <span class="flex items-center justify-center w-8 h-8 rounded-full bg-blue-50 group-hover:bg-blue-100 transition-colors duration-200">
                                <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"></path>
                                </svg>
                            </span>
                            <span class="mr-2 font-medium text-gray-700 group-hover:text-blue-600 transition-colors duration-200">@newsText</span>
                        </a>
                    </li>
                </ol>
            </div>
        </nav>

        @if (Model.Any())
        {
            <!-- خبر اصلی (اولین خبر) -->
            <div class="mb-12">
                <div class="bg-white rounded-3xl shadow-2xl overflow-hidden hover:shadow-2xl transition-all duration-300">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <!-- تصویر خبر اصلی -->
                        <div class="relative overflow-hidden h-80 lg:h-full">
                            <img src="@Model.First().ImageUrl"
                                 alt="@Model.First().Title"
                                 class="w-full h-full object-cover hover:scale-105 transition-transform duration-700">
                            <div class="absolute top-4 right-4">
                                <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
                                    <i class="fas fa-fire mr-1"></i>
                                    @hotLabel
                                </span>
                            </div>
                            <div class="absolute bottom-4 right-4">
                                <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-bold">
                                    @lang.ToUpper()
                                </span>
                            </div>
                        </div>

                        <!-- محتوای خبر اصلی -->
                        <div class="p-8 flex flex-col justify-center">
                            <div class="flex items-center text-sm text-gray-500 mb-4">
                                <div class="flex items-center ml-6">
                                    <i class="fas fa-calendar ml-1"></i>
                                    <span>@Model.First().PublishDate.ToString("yyyy/MM/dd")</span>
                                </div>
                                <div class="flex items-center ml-6">
                                    <i class="fas fa-eye ml-1"></i>
                                    <span>@Model.First().ViewCount @views</span>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.First().Category))
                                {
                                    <div class="flex items-center">
                                        <i class="fas fa-tag ml-1"></i>
                                        <span>@Model.First().Category</span>
                                    </div>
                                }
                            </div>

                            <h3 class="text-2xl lg:text-3xl font-black text-gray-800 mb-4 leading-tight">
                                @Model.First().Title
                            </h3>

                            <p class="text-gray-600 text-lg leading-8 mb-6 line-clamp-3">
                                @Model.First().Summary
                            </p>

                            <div class="flex items-center justify-between mt-auto">
                                <a href="/@lang/news/@Model.First().Id/@Model.First().Title"
                                   class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-xl font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 flex items-center group">
                                    <span>@readFull</span>
                                    <i class="fas fa-arrow-left mr-3 group-hover:-translate-x-1 transition-transform"></i>
                                </a>

                                @if (!string.IsNullOrEmpty(Model.First().Author))
                                {
                                    <div class="text-right">
                                        <p class="text-sm text-gray-500">@authorLabel</p>
                                        <p class="font-semibold text-gray-700">@Model.First().Author</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- لیست اخبار دیگر -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var news in Model.Skip(1))
                {
                    <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-2 group">
                        <!-- تصویر خبر -->
                        <div class="relative overflow-hidden h-48">
                            <img src="@news.ImageUrl"
                                 alt="@news.Title"
                                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute top-3 right-3">
                                <span class="bg-blue-600/90 text-white px-2 py-1 rounded-full text-xs font-bold backdrop-blur-sm">
                                    @lang.ToUpper()
                                </span>
                            </div>
                        </div>

                        <!-- محتوای خبر -->
                        <div class="p-6">
                            <div class="flex items-center text-xs text-gray-500 mb-3">
                                <div class="flex items-center ml-4">
                                    <i class="fas fa-calendar ml-1"></i>
                                    <span>@news.PublishDate.ToString("yyyy/MM/dd")</span>
                                </div>
                                <div class="flex items-center">
                                    <i class="fas fa-eye ml-1"></i>
                                    <span>@news.ViewCount</span>
                                </div>
                            </div>

                            <h4 class="text-lg font-bold text-gray-800 mb-3 line-clamp-2 leading-tight">
                                @news.Title
                            </h4>

                            <p class="text-gray-600 text-sm leading-6 line-clamp-2 mb-4">
                                @news.Summary
                            </p>

                            <a href="/@lang/news/@news.Id/@news.Title"
                               class="w-full bg-gray-100 hover:bg-blue-100 text-blue-600 py-2 px-4 rounded-lg text-sm font-semibold transition-all duration-300 flex items-center justify-center group/btn">
                                <span>@continueReading</span>
                                <i class="fas fa-arrow-left mr-2 group-hover/btn:-translate-x-1 transition-transform"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- حالت خالی -->
            <div class="text-center py-16">
                <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-newspaper text-3xl text-blue-600"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-700 mb-4">@noNewsTitle</h3>
                <p class="text-gray-500 mb-6">@noNewsDesc</p>
                <button class="bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-all duration-300">
                    <i class="fas fa-sync-alt ml-2"></i>
                    @reload
                </button>
            </div>
        }
    </div>
</section>

<script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "NewsArticle",
      "headline": "@Model.FirstOrDefault()?.Title",
      "description": "@Model.FirstOrDefault()?.Summary",
      "image": "@Model.FirstOrDefault()?.ImageUrl",
      "datePublished": "@Model.FirstOrDefault()?.PublishDate.ToString("yyyy-MM-dd")",
      "author": {
        "@@type": "Person",
        "name": "@Model.FirstOrDefault()?.Author"
      },
      "mainEntityOfPage": {
        "@@type": "WebPage",
        "@@id": "/@lang/news/@Model.FirstOrDefault()?.Id"
      }
    }
</script>

<!-- Breadcrumb Schema -->
<script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@@type": "ListItem",
          "position": 1,
          "name": "@homePage",
          "item": "/@lang"
        },
        {
          "@@type": "ListItem",
          "position": 2,
          "name": "@newsText",
          "item": "/@lang/newses"
        }
      ]
    }
</script>