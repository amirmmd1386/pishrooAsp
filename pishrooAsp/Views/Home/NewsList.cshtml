@* Components/LastNews/Default.cshtml *@

@model List<pishrooAsp.ModelViewer.NewsViewModelSecond>
@{
    var lang = ViewBag.Language as string ?? "fa";

    // متون ترجمه شده
    string lastNewsTitle = lang switch
    {
        "fa" => "آخرین اخبار و مقالات",
        "en" => "Latest News & Articles",
        "ru" => "Последние новости и статьи",
        "tr" => "Son Haberler ve Makaleler",
        "ar" => "آخر الأخبار والمقالات",
        _ => "Latest News & Articles"
    };

    string lastNewsDesc = lang switch
    {
        "fa" => "تازه‌ترین اخبار و مطالب آموزشی از شرکت پبشرو آروین پلیمر",
        "en" => "Latest news and educational content from Pishro Arvin Polymer",
        "ru" => "Последние новости и учебные материалы от компании Пишро Арвин Полимер",
        "tr" => "Pishro Arvin Polimer'den en son haberler ve eğitim içerikleri",
        "ar" => "أحدث الأخبار والمحتوى التعليمي من شركة بيشرو أربين بوليمر",
        _ => "Latest news and educational content from Pishro Arvin Polymer"
    };

    string homePage = lang switch
    {
        "fa" => "صفحه اصلی",
        "en" => "Home",
        "ru" => "Главная",
        "tr" => "Ana Sayfa",
        "ar" => "الصفحة الرئيسية",
        _ => "Home"
    };

    string newsText = lang switch
    {
        "fa" => "اخبار",
        "en" => "News",
        "ru" => "Новости",
        "tr" => "Haberler",
        "ar" => "الأخبار",
        _ => "News"
    };

    string hotLabel = lang switch
    {
        "fa" => "داغ ترین",
        "en" => "Hot",
        "ru" => "Горячее",
        "tr" => "Sıcak",
        "ar" => "ساخن",
        _ => "Hot"
    };

    string views = lang switch
    {
        "fa" => "بازدید",
        "en" => "views",
        "ru" => "просмотров",
        "tr" => "görüntüleme",
        "ar" => "مشاهدة",
        _ => "views"
    };

    string categoryLabel = lang switch
    {
        "fa" => "دسته‌بندی",
        "en" => "Category",
        "ru" => "Категория",
        "tr" => "Kategori",
        "ar" => "الفئة",
        _ => "Category"
    };

    string authorLabel = lang switch
    {
        "fa" => "نویسنده",
        "en" => "Author",
        "ru" => "Автор",
        "tr" => "Yazar",
        "ar" => "المؤلف",
        _ => "Author"
    };

    string readFull = lang switch
    {
        "fa" => "مطالعه کامل",
        "en" => "Read Full",
        "ru" => "Читать полностью",
        "tr" => "Tamamını Oku",
        "ar" => "قراءة كاملة",
        _ => "Read Full"
    };

    string continueReading = lang switch
    {
        "fa" => "ادامه مطلب",
        "en" => "Continue Reading",
        "ru" => "Читать далее",
        "tr" => "Devamını Oku",
        "ar" => "تابع القراءة",
        _ => "Continue Reading"
    };

    string noNewsTitle = lang switch
    {
        "fa" => "خبری برای نمایش وجود ندارد",
        "en" => "No news to display",
        "ru" => "Нет новостей для отображения",
        "tr" => "Gösterilecek haber yok",
        "ar" => "لا توجد أخبار لعرضها",
        _ => "No news to display"
    };

    string noNewsDesc = lang switch
    {
        "fa" => "به زودی اخبار و مقالات جدید منتشر خواهد شد",
        "en" => "New news and articles will be published soon",
        "ru" => "Скоро будут опубликованы новые новости и статьи",
        "tr" => "Yakında yeni haberler ve makaleler yayınlanacak",
        "ar" => "سيتم نشر أخبار ومقالات جديدة قريبًا",
