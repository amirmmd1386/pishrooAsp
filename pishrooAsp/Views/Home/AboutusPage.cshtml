@model pishrooAsp.Models.AboutUs.AboutUsViewModel
@{
    ViewData["Title"] = "درباره ما";
}

<!-- فونت آیکون‌ها -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mx-auto px-4 py-8">
    <!-- هدر صفحه -->
    <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">@Model.Translation.CompanyName</h1>
        <p class="text-xl text-indigo-600 italic">@Model.Translation.Slogan</p>
    </header>

    <!-- بخش اصلی -->
    <div class="flex flex-col lg:flex-row gap-8 mb-12">
        <!-- بخش سمت چپ (تصویر و اطلاعات تماس) -->
        <div class="lg:w-1/3">
            <!-- تصویر شرکت -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
                <img src="/image/companyImage.jpg" alt="ساختمان شرکت" class="w-full h-64 object-cover">
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <i class="fas fa-calendar-alt text-indigo-500 ml-2"></i>
                        <span>سال تأسیس: @(Model.Item.EstablishedYear?.ToString() ?? "ثبت نشده")</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-users text-indigo-500 ml-2"></i>
                        <span>تعداد کارکنان: @(Model.Item.EmployeeCount?.ToString() ?? "ثبت نشده") نفر</span>
                    </div>
                </div>
            </div>

            <!-- اطلاعات تماس -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">اطلاعات تماس</h3>

                <div class="space-y-4">
                    <!-- تلفن‌ها -->
                    @if (!string.IsNullOrEmpty(Model.Item.Phone1) || !string.IsNullOrEmpty(Model.Item.Phone2))
                    {
                        <div class="flex items-start">
                            <i class="fas fa-phone-alt text-indigo-500 mt-1 ml-2"></i>
                            <div>
                                <p class="font-medium">تلفن‌های تماس:</p>
                                @if (!string.IsNullOrEmpty(Model.Item.Phone1))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone1" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone1
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Item.Phone2))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone2" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone2
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Item.Phone3))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone3" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone3
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Item.Phone4))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone4" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone4
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Item.Phone5))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone5" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone5
                                        </a>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Item.Phone6))
                                {
                                    <div class="flex items-center mt-1">
                                        <a href="tel:@Model.Item.Phone6" class="text-gray-600 hover:text-indigo-600 flex items-center">
                                            <i class="fas fa-phone text-sm ml-1"></i>
                                            @Model.Item.Phone6
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }

