@model pishrooAsp.Models.MessageTemplate.MessageTemplate

@{
    ViewData["Title"] = "ایجاد قالب پیام";
}

<div class="max-w-3xl mx-auto p-6">
    <h1 class="text-xl font-bold mb-6">ایجاد قالب پیام</h1>

    <form asp-action="Create" method="post"
          class="bg-white p-6 rounded-xl shadow space-y-4">

        <input type="hidden" asp-for="CompanyId" value="@ViewBag.CompanyId" />

        <div>
            <label class="block mb-1">نام قالب</label>
            <input asp-for="Name" class="border w-full rounded px-3 py-2" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block mb-1">دسته‌بندی</label>
            <input asp-for="Category" class="border w-full rounded px-3 py-2" />
        </div>

        <div>
            <label class="block mb-1">متن قالب (با توکن)</label>
            <textarea asp-for="TemplateText" rows="6"
                      class="border w-full rounded px-3 py-2"></textarea>
            <span asp-validation-for="TemplateText" class="text-red-600 text-sm"></span>

            <p class="text-xs text-gray-500 mt-1">
                مثال: سلام {{FullName}} عزیز
            </p>
        </div>

        <div>
            <label class="block mb-1">توضیحات</label>
            <textarea asp-for="Description" rows="3"
                      class="border w-full rounded px-3 py-2"></textarea>
        </div>

        <div class="flex justify-end gap-3">
            <a asp-action="ByCompany" asp-route-companyId="@ViewBag.CompanyId"
               class="bg-gray-300 px-4 py-2 rounded">
                بازگشت
            </a>
            <button class="bg-blue-600 text-white px-4 py-2 rounded">
                ذخیره قالب
            </button>
        </div>
    </form>
</div>
