@* Views/GroupSms/PhoneGroups.cshtml *@
@model List<pishrooAsp.Models.GroupSms.PhoneGroup>

@{
    ViewData["Title"] = "مدیریت گروه‌های تلفن";
    Layout = "_AdminLayout";
}

<div class="min-h-screen bg-gray-50">
    <!-- هدر -->
    <div class="bg-white border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">گروه‌های تلفن</h1>
                    <p class="text-gray-500 mt-1">مدیریت و کپی گروه‌های شماره تلفن</p>
                </div>
                <div class="flex items-center space-x-4 space-x-reverse">
                    <a asp-action="Index" class="btn-secondary flex items-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        بازگشت
                    </a>
                    <a asp-action="CreatePhoneGroup" class="btn-primary flex items-center">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        گروه جدید
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- آمار -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">


            <!-- این کارت جدید رو اضافه کن -->
            <div class="bg-white rounded-xl border p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-purple-50 rounded-lg">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="mr-4">
                        <p class="text-sm text-gray-500">عملیات سریع</p>
                        <button onclick="copyAllPhoneNumbers()"
                                class="mt-2 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition">
                            کپی همه شماره‌ها
                        </button>
                    </div>
                </div>
            </div>


            <div class="bg-white rounded-xl border p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-50 rounded-lg">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="mr-4">
                        <p class="text-sm text-gray-500">کل گروه‌ها</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl border p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-green-50 rounded-lg">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                    </div>
                    <div class="mr-4">
                        <p class="text-sm text-gray-500">کل شماره‌ها</p>
                        <p class="text-2xl font-bold text-gray-900">
                            @Model.Sum(g => g.PhoneNumbers?.Count ?? 0)
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl border p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-purple-50 rounded-lg">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="mr-4">
                        <p class="text-sm text-gray-500">آخرین بروزرسانی</p>
                        <p class="text-2xl font-bold text-gray-900">
                            @(Model.OrderByDescending(g => g.UpdatedAt).FirstOrDefault()?.UpdatedAt.ToString("yyyy/MM/dd") ?? "-")
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- لیست گروه‌ها -->
        <div class="bg-white rounded-xl border">
            <div class="p-6 border-b">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="relative flex-1">
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                        <input type="text" id="searchInput"
                               class="block w-full pr-10 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                               placeholder="جستجوی گروه..." />
                    </div>
                </div>
            </div>

            <div class="p-6">
                @if (Model.Any())
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach (var group in Model)
                        {
                            <div class="bg-gray-50 rounded-lg border p-4 hover:shadow-md transition">
                                <div class="flex justify-between items-start mb-3">
                                    <div>
                                        <h4 class="font-bold text-gray-900">@group.Name</h4>
                                        @if (!string.IsNullOrEmpty(group.Description))
                                        {
                                            <p class="text-sm text-gray-500 mt-1">@group.Description</p>
                                        }
                                    </div>
                                    <!-- اینجا دکمه‌های عملیات را اضافه کنید -->
                                    <div class="flex space-x-2 space-x-reverse">
                                        <!-- دکمه ویرایش -->
                                        <a asp-action="EditPhoneGroup"
                                           asp-route-id="@group.Id"
                                           class="text-blue-600 hover:text-blue-800 p-2 rounded-lg hover:bg-blue-50 transition"
                                           title="ویرایش گروه">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>

                                      
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="flex justify-between items-center mb-2">
                                        <span class="text-sm text-gray-600">
                                            @group.PhoneNumbers.Count شماره
                                        </span>
                                        <button type="button"
                                                onclick="toggleGroupNumbers(@group.Id, this)"
                                                class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                            مشاهده شماره‌ها
                                        </button>
                                    </div>
                                    <div id="groupNumbers@(group.Id)" class="hidden space-y-2 mt-2 max-h-60 overflow-y-auto">
                                        @foreach (var phone in group.PhoneNumbers)
                                        {
                                            <div class="flex justify-between items-center bg-white p-2 rounded border text-sm">
                                                <div>
                                                    @if (!string.IsNullOrEmpty(phone.Name))
                                                    {
                                                        <span class="font-medium">@phone.Name</span>
                                                        <span class="text-gray-500 mr-2">(@phone.Number)</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@phone.Number</span>
                                                    }
                                                </div>
                                                <span class="text-xs px-2 py-1 rounded-full @(phone.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                    @(phone.IsActive ? "فعال" : "غیرفعال")
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="flex space-x-3 space-x-reverse">
                                    <button type="button"
                                            onclick="copyGroupNumbers(@group.Id)"
                                            class="flex-1 bg-blue-50 text-blue-700 hover:bg-blue-100 py-2 px-4 rounded-lg text-sm font-medium transition">
                                        کپی شماره‌ها
                                    </button>
                                    <a asp-action="Create" asp-controller="GroupSms"
                                       asp-route-groupId="@group.Id"
                                       class="flex-1 bg-green-50 text-green-700 hover:bg-green-100 py-2 px-4 rounded-lg text-sm font-medium transition flex items-center justify-center">
                                        استفاده در پیامک
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">گروهی یافت نشد</h3>
                        <p class="mt-2 text-gray-500">هنوز هیچ گروه تلفنی ایجاد نکرده‌اید.</p>
                        <div class="mt-6">
                            <a asp-action="CreatePhoneGroup" class="btn-primary">
                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                                ایجاد گروه جدید
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // جستجوی گروه‌ها
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            const groups = document.querySelectorAll('.bg-gray-50.rounded-lg');

            groups.forEach(group => {
                const title = group.querySelector('.font-bold').textContent.toLowerCase();
                const description = group.querySelector('.text-gray-500')?.textContent.toLowerCase() || '';

                if (title.includes(searchTerm) || description.includes(searchTerm)) {
                    group.style.display = 'block';
                } else {
                    group.style.display = 'none';
                }
            });
        });

        // نمایش/مخفی کردن شماره‌ها
        function toggleGroupNumbers(groupId, button) {
            const numbersDiv = document.getElementById(`groupNumbers${groupId}`);

            if (numbersDiv.classList.contains('hidden')) {
                numbersDiv.classList.remove('hidden');
                button.textContent = 'مخفی کردن شماره‌ها';
            } else {
                numbersDiv.classList.add('hidden');
                button.textContent = 'مشاهده شماره‌ها';
            }
        }

        // کپی کردن شماره‌ها
        async function copyGroupNumbers(groupId) {
            try {
                const response = await fetch(`@Url.Action("GetGroupNumbersJson", "GroupSms")?id=${groupId}`);
                const result = await response.json();

                if (result.success && result.numbers.length > 0) {
                    const numbersText = result.numbers.join('\n');

                    await navigator.clipboard.writeText(numbersText);

                    // نمایش پیام موفقیت
                    showToast(`تعداد ${result.count} شماره کپی شد`, 'success');
                } else {
                    showToast(result.message || 'خطا در دریافت شماره‌ها', 'error');
                }
            } catch (error) {
                showToast('خطا در کپی شماره‌ها', 'error');
                console.error('Copy error:', error);
            }
        }

        // نمایش پیام‌ها
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `fixed top-4 left-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
            toast.textContent = message;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }






                // این تابع رو به Scripts بخش View اضافه کن
        async function copyAllPhoneNumbers() {
            try {
                // از سرور همه گروه‌ها رو بگیر
                const response = await fetch('@Url.Action("GetAllPhoneNumbersJson", "GroupSms")');
                const result = await response.json();

                if (result.success && result.numbers.length > 0) {
                    const numbersText = result.numbers.join('\n');

                    // کپی به کلیپ‌بورد
                    await navigator.clipboard.writeText(numbersText);

                    // نمایش پیام
                    showToast(`✅ تعداد ${result.count} شماره از ${result.groupCount} گروه کپی شد`, 'success');

                    // نمایش شماره‌ها در کنسول (اختیاری)
                    console.log('شماره‌های کپی شده:', result.numbers);
                } else {
                    showToast('❌ شماره‌ای برای کپی یافت نشد', 'error');
                }
            } catch (error) {
                showToast('❌ خطا در کپی شماره‌ها', 'error');
                console.error('خطا:', error);
            }
        }

        // تابع نمایش پیام
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `fixed top-4 left-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
            toast.textContent = message;
            document.body.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 5000);
        }




    </script>
}