@using pishrooAsp.Models.GroupSms
@model pishrooAsp.Models.GroupSms.GroupSmsCampaign

@{
    ViewData["Title"] = "جزئیات کمپین";
    Layout = "_AdminLayout";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- هدر صفحه -->
        <div class="mb-8">
            <a asp-action="Index" class="inline-flex items-center text-blue-600 hover:text-blue-900 mb-4">
                <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                بازگشت به لیست
            </a>

            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">@Model.Title</h1>
                    <p class="text-gray-500 mt-1">کد کمپین: #@Model.Id</p>
                </div>

                <div class="flex flex-wrap gap-3">
                    @if (Model.Status == SmsStatus.Draft)
                    {
                        <form asp-action="Send" method="post" class="inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit"
                                    onclick="return confirm('آیا از ارسال این کمپین مطمئن هستید؟')"
                                    class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500">
                                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                </svg>
                                ارسال کمپین
                            </button>
                        </form>
                    }

                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        حذف
                    </a>
                </div>
            </div>
        </div>

        <!-- پیام‌های سیستم -->
        @if (TempData["Success"] != null)
        {
            <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-green-800">@TempData["Success"]</span>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-red-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-red-800">@TempData["Error"]</span>
                </div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- سایدبار اطلاعات -->
            <div class="lg:col-span-1">
                <!-- کارت وضعیت -->
                <div class="bg-white rounded-xl border shadow-sm mb-6">
                    <div class="p-6 border-b">
                        <h2 class="text-lg font-semibold text-gray-900">وضعیت کمپین</h2>
                    </div>
                    <div class="p-6">
                        @{
                            var statusConfig = Model.Status switch
                            {
                                SmsStatus.Draft => ("bg-gray-100 text-gray-800", "پیش‌نویس", "gray"),
                                SmsStatus.Scheduled => ("bg-yellow-100 text-yellow-800", "زمان‌بندی شده", "yellow"),
                                SmsStatus.Sending => ("bg-blue-100 text-blue-800", "در حال ارسال", "blue"),
                                SmsStatus.Completed => ("bg-green-100 text-green-800", "تکمیل شده", "green"),
                                SmsStatus.Failed => ("bg-red-100 text-red-800", "ناموفق", "red"),
                                _ => ("bg-gray-100 text-gray-800", "حذف", "gray")
                            };
                        }

                        <div class="flex items-center mb-6">
                            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium @statusConfig.Item1">
                                @statusConfig.Item2
                            </span>
                        </div>

                        <dl class="space-y-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">تاریخ ایجاد</dt>
                                <dd class="mt-1 text-gray-900">@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</dd>
                            </div>

                            @if (Model.SentAt.HasValue)
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">زمان ارسال</dt>
                                    <dd class="mt-1 text-gray-900">@Model.SentAt.Value.ToString("yyyy/MM/dd HH:mm")</dd>
                                </div>
                            }

                            <div>
                                <dt class="text-sm font-medium text-gray-500">تعداد کل پیامک‌ها</dt>
                                <dd class="mt-1 text-gray-900">@Model.TotalCount</dd>
                            </div>

                            <div>
                                <dt class="text-sm font-medium text-gray-500">ارسال موفق</dt>
                                <dd class="mt-1 text-gray-900">@Model.SentCount</dd>
                            </div>

                            @if (Model.TotalCount > 0)
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">نرخ موفقیت</dt>
                                    <dd class="mt-1 text-gray-900">
                                        @{
                                            var successRate = (Model.SentCount * 100) / Model.TotalCount;
                                        }
                                        <span class="font-bold @(successRate >= 80 ? "text-green-600" : successRate >= 50 ? "text-yellow-600" : "text-red-600")">
                                            @successRate%
                                        </span>
                                    </dd>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">یادداشت</dt>
                                    <dd class="mt-1 text-gray-900 whitespace-pre-line">@Model.Notes</dd>
                                </div>
                            }
                        </dl>
                    </div>
                </div>

                <!-- پیشرفت ارسال -->
                @if (Model.Status == SmsStatus.Sending || Model.Status == SmsStatus.Completed)
                {
                    <div class="bg-white rounded-xl border shadow-sm">
                        <div class="p-6 border-b">
                            <h2 class="text-lg font-semibold text-gray-900">پیشرفت ارسال</h2>
                        </div>
                        <div class="p-6">
                            <div class="space-y-4">
                                <div>
                                    <div class="flex justify-between text-sm text-gray-600 mb-1">
                                        <span>تکمیل شده</span>
                                        <span>@Model.SentCount از @Model.TotalCount</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        @{
                                            var progress = Model.TotalCount > 0 ? (Model.SentCount * 100) / Model.TotalCount : 0;
                                        }
                                        <div class="bg-green-600 h-2 rounded-full" style="width: @progress%"></div>
                                    </div>
                                </div>

                                @if (Model.Status == SmsStatus.Completed)
                                {
                                    <div class="pt-4 border-t">
                                        <div class="grid grid-cols-2 gap-4">
                                            <div class="text-center p-3 bg-green-50 rounded-lg">
                                                <div class="text-2xl font-bold text-green-600">@Model.SentCount</div>
                                                <div class="text-sm text-gray-600">موفق</div>
                                            </div>
                                            <div class="text-center p-3 bg-red-50 rounded-lg">
                                                <div class="text-2xl font-bold text-red-600">@(Model.TotalCount - Model.SentCount)</div>
                                                <div class="text-sm text-gray-600">ناموفق</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- محتوای اصلی -->
            <div class="lg:col-span-2">
                <!-- متن پیامک -->
                <div class="bg-white rounded-xl border shadow-sm mb-6">
                    <div class="p-6 border-b">
                        <h2 class="text-lg font-semibold text-gray-900">متن پیامک</h2>
                    </div>
                    <div class="p-6">
                        <div class="bg-gray-50 rounded-lg p-4">
                            <p class="text-gray-700 whitespace-pre-line leading-relaxed">@Model.Message</p>
                        </div>

                        <div class="mt-6">
                            <h3 class="text-sm font-medium text-gray-500 mb-2">تعداد کاراکتر</h3>
                            <div class="flex items-center">
                                <div class="flex-1">
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        @{
                                            var messageLength = Model.Message.Length;
                                            var charPercentage = Math.Min(100, (messageLength * 100) / 500);
                                            var charColor = messageLength > 500 ? "bg-red-600" : messageLength > 400 ? "bg-yellow-600" : "bg-green-600";
                                        }
                                        <div class="@charColor h-2 rounded-full" style="width: @charPercentage%"></div>
                                    </div>
                                </div>
                                <span class="text-sm text-gray-600 mr-3">@messageLength/500</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- تاریخچه ارسال -->
                <div class="bg-white rounded-xl border shadow-sm">
                    <div class="p-6 border-b">
                        <div class="flex justify-between items-center">
                            <h2 class="text-lg font-semibold text-gray-900">تاریخچه ارسال</h2>
                            <span class="text-sm text-gray-500">@Model.Logs.Count مورد</span>
                        </div>
                    </div>

                    <div class="p-6">
                        @if (Model.Logs.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead>
                                        <tr>
                                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">شماره موبایل</th>
                                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">وضعیت</th>
                                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">زمان</th>
                                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">پیام</th>
                                            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">کد پیگیری</th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        @foreach (var log in Model.Logs.OrderByDescending(l => l.SentAt))
                                        {
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-4 py-3">
                                                    <div class="text-sm font-mono text-gray-900">@log.Mobile</div>
                                                </td>
                                                <td class="px-4 py-3">
                                                    @if (log.Status == "Sent")
                                                    {
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                            <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                            </svg>
                                                            ارسال شد
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                            <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                            </svg>
                                                            ناموفق
                                                        </span>
                                                    }
                                                </td>
                                                <td class="px-4 py-3 text-sm text-gray-500">
                                                    @log.SentAt?.ToString("HH:mm")
                                                </td>
                                                <td class="px-4 py-3">
                                                    @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                                    {
                                                        <span class="text-xs text-red-600" title="@log.ErrorMessage">
                                                            @(log.ErrorMessage.Length > 30 ? log.ErrorMessage.Substring(0, 30) + "..." : log.ErrorMessage)
                                                        </span>
                                                    }
                                                </td>
                                                <td class="px-4 py-3">
                                                    @if (log.MessageId.HasValue && log.MessageId > 0)
                                                    {
                                                        <code class="text-xs bg-gray-100 px-2 py-1 rounded">@log.MessageId</code>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- خلاصه آماری -->
                            <div class="mt-6 pt-6 border-t">
                                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                    @{
                                        var sentCount = Model.Logs.Count(l => l.Status == "Sent");
                                        var failedCount = Model.Logs.Count(l => l.Status != "Sent");
                                        var totalCost = Model.Logs.Sum(l => l.Cost ?? 0);
                                    }

                                    <div class="text-center p-3 bg-blue-50 rounded-lg">
                                        <div class="text-lg font-bold text-blue-600">@Model.Logs.Count</div>
                                        <div class="text-sm text-gray-600">کل ارسال‌ها</div>
                                    </div>

                                    <div class="text-center p-3 bg-green-50 rounded-lg">
                                        <div class="text-lg font-bold text-green-600">@sentCount</div>
                                        <div class="text-sm text-gray-600">موفق</div>
                                    </div>

                                    <div class="text-center p-3 bg-red-50 rounded-lg">
                                        <div class="text-lg font-bold text-red-600">@failedCount</div>
                                        <div class="text-sm text-gray-600">ناموفق</div>
                                    </div>

                                    @if (totalCost > 0)
                                    {
                                        <div class="text-center p-3 bg-purple-50 rounded-lg">
                                            <div class="text-lg font-bold text-purple-600">@totalCost.ToString("N0")</div>
                                            <div class="text-sm text-gray-600">هزینه (ریال)</div>
                                        </div>
                                    }
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.CreatedBy))
                            {
                                <div>
                                    <h3 class="text-sm font-medium text-gray-500">آخرین ویرایش توسط</h3>
                                    <p class="mt-1 text-sm text-gray-900">@Model.CreatedBy</p>
                                    <p class="text-xs text-gray-500">@Model.SentAt?.ToString("yyyy/MM/dd HH:mm")</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-8">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                <h3 class="mt-4 text-lg font-medium text-gray-900">تاریخچه‌ای یافت نشد</h3>
                                <p class="mt-2 text-gray-500">هنوز پیامکی از این کمپین ارسال نشده است.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // تابع برای کپی متن پیامک
        function copyMessage() {
            const message = `@Html.Raw(Model.Message.Replace("'", "\\'"))`;
            navigator.clipboard.writeText(message).then(() => {
                alert('متن پیامک کپی شد');
            });
        }

        // نمایش جزئیات خطا
        document.querySelectorAll('[title]').forEach(element => {
            element.addEventListener('click', function() {
                if (this.title && this.title.length > 30) {
                    alert(this.title);
                }
            });
        });
    </script>
}