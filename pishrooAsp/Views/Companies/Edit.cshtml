@model pishrooAsp.Models.Company.Company
@{
    ViewData["Title"] = "ویرایش شرکت";
}

<div class="max-w-3xl mx-auto p-6">
    <h1 class="text-xl font-bold mb-6">ویرایش شرکت</h1>
    <div asp-validation-summary="All"
         class="bg-red-100 text-red-700 p-3 rounded-lg mb-4">
    </div>

    <form asp-action="Edit" method="post"
          class="bg-white p-6 rounded-xl shadow space-y-4">

        <input type="hidden" asp-for="Id" />

        <div>
            <label class="block mb-1">نام شرکت</label>
            <input asp-for="Name" class="border rounded-lg w-full px-3 py-2" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block mb-1">ایمیل</label>
            <input asp-for="Email" class="border rounded-lg w-full px-3 py-2" />
        </div>

        <div>
            <label class="block mb-1">تلفن</label>
            <input asp-for="Phone" class="border rounded-lg w-full px-3 py-2" />
        </div>

        <div>
            <label class="block mb-1">شخص تماس</label>
            <input asp-for="ContactPerson" class="border rounded-lg w-full px-3 py-2" />
        </div>

        <div class="flex items-center gap-2">
            <input asp-for="IsActive" type="checkbox" class="w-4 h-4" />
            <label>فعال باشد</label>
        </div>

        <div class="flex justify-end gap-3">
            <a asp-action="Index"
               class="px-4 py-2 rounded-lg bg-gray-300">
                بازگشت
            </a>
            <button class="px-4 py-2 rounded-lg bg-green-600 text-white">
                ذخیره تغییرات
            </button>
        </div>
    </form>
</div>
