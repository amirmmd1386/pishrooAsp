@model pishrooAsp.Models.Products.Product
@{
    ViewData["Title"] = "مدیریت کاربردهای محصول";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">مدیریت کاربردهای محصول</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="Usage" enctype="multipart/form-data" class="bg-white shadow-md rounded-lg p-6">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- کاربرد 1 -->
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-lg font-medium text-gray-800 mb-3">کاربرد 1</h3>
                <div class="mb-3">
                    <label class="block text-gray-700 text-sm font-bold mb-2">عنوان کاربرد</label>
                    <input name="Usage1Title" value="@Model.Usage1Title" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">فایل کاربرد (عکس یا PDF)</label>
                    <input type="file" name="Usage1File" accept="image/*,.pdf" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                    @if (!string.IsNullOrEmpty(Model.Usage1FileUrl))
                    {
                        <div class="mt-2">
                            <span class="text-sm text-gray-600">فایل فعلی: </span>
                            <a href="@Model.Usage1FileUrl" target="_blank" class="text-blue-600 text-sm">مشاهده فایل</a>
                        </div>
                    }
                </div>
            </div>

            <!-- کاربرد 2 -->
            <div class="border border-gray-200 rounded-lg p-4">
