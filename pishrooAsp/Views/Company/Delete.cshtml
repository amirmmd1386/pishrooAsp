@model pishrooAsp.Models.Sms.Company

@{
    ViewData["Title"] = "حذف شرکت";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-red-50 py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- هدر -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-red-500 to-pink-600 rounded-full mb-6 shadow-lg">
                <i class="fas fa-trash-alt text-3xl text-white"></i>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">حذف شرکت</h1>
            <p class="text-gray-600">آیا از حذف این شرکت اطمینان دارید؟</p>
        </div>

        <!-- کارت اطلاعات شرکت -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
            <!-- هشدار -->
            <div class="bg-red-50 border-r-4 border-red-500 p-4 rounded-lg mb-6">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-500 text-xl ml-3"></i>
                    <div>
                        <h3 class="font-bold text-red-700">هشدار!</h3>
                        <p class="text-red-600 text-sm mt-1">
                            این عمل غیرقابل بازگشت است. تمام اطلاعات مرتبط با این شرکت نیز حذف خواهند شد.
                        </p>
                    </div>
                </div>
            </div>

            <!-- اطلاعات شرکت -->
            <div class="space-y-6">
                <div class="flex items-center p-4 bg-gray-50 rounded-xl">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center ml-4">
                        <i class="fas fa-building text-blue-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">نام شرکت</p>
                        <p class="text-lg font-bold text-gray-800">@Model.Title</p>
                    </div>
                </div>

                <div class="flex items-center p-4 bg-gray-50 rounded-xl">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center ml-4">
                        <i class="fas fa-phone text-green-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">شماره موبایل</p>
                        <p class="text-lg font-bold text-gray-800 dir-ltr text-left">@Model.Mobile</p>
                    </div>
                </div>

                <div class="flex items-center p-4 bg-gray-50 rounded-xl">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center ml-4">
                        <i class="fas fa-id-card text-purple-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">شناسه شرکت</p>
                        <p class="text-lg font-bold text-gray-800">@Model.Id</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- فرم حذف -->
        <form method="post" asp-action="Delete" class="space-y-4">
            <input type="hidden" asp-for="Id" />

            <div class="flex flex-col sm:flex-row gap-4">
                <!-- دکمه حذف -->
                <button type="submit"
                        class="flex-1 bg-gradient-to-r from-red-500 to-pink-600 text-white py-4 rounded-xl font-bold text-lg hover:from-red-600 hover:to-pink-700 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center">
                    <i class="fas fa-trash-alt ml-2"></i>
                    حذف شرکت
                </button>

                <!-- دکمه انصراف -->
                <a href="@Url.Action("Index", "Company")"
                   class="flex-1 bg-gradient-to-r from-gray-200 to-gray-300 text-gray-700 py-4 rounded-xl font-bold text-lg hover:from-gray-300 hover:to-gray-400 transition-all duration-300 shadow hover:shadow-md flex items-center justify-center">
                    <i class="fas fa-times ml-2"></i>
                    انصراف
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .dir-ltr {
        direction: ltr;
    }
</style>