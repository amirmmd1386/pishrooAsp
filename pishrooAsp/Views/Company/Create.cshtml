@model pishrooAsp.Models.Sms.Company
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var lang = ViewBag.Language as string ?? "fa";

    // متون ترجمه شده
    string companyRegistration = lang switch
    {
        "fa" => "ثبت شرکت جدید",
        "en" => "New Company Registration",
        "ru" => "Регистрация новой компании",
        "tr" => "Yeni Şirket Kaydı",
        "ar" => "تسجيل شركة جديدة",
        _ => "New Company Registration"
    };

    string companyName = lang switch
    {
        "fa" => "نام شرکت",
        "en" => "Company Name",
        "ru" => "Название компании",
        "tr" => "Şirket Adı",
        "ar" => "اسم الشركة",
        _ => "Company Name"
    };

    string mobileNumber = lang switch
    {
        "fa" => "شماره موبایل",
        "en" => "Mobile Number",
        "ru" => "Мобильный номер",
        "tr" => "Cep Telefonu",
        "ar" => "رقم الجوال",
        _ => "Mobile Number"
    };

    string companyNamePlaceholder = lang switch
    {
        "fa" => "مثال: شرکت نمونه",
        "en" => "Example: Sample Company",
        "ru" => "Пример: Образец компании",
        "tr" => "Örnek: Örnek Şirket",
        "ar" => "مثال: شركة نموذجية",
        _ => "Example: Sample Company"
    };

    string mobilePlaceholder = lang switch
    {
        "fa" => "مثال: 09121234567",
        "en" => "Example: 09121234567",
        "ru" => "Пример: 09121234567",
        "tr" => "Örnek: 09121234567",
        "ar" => "مثال: 09121234567",
        _ => "Example: 09121234567"
    };

    string registerCompany = lang switch
    {
        "fa" => "ثبت شرکت",
        "en" => "Register Company",
        "ru" => "Зарегистрировать компанию",
        "tr" => "Şirketi Kaydet",
        "ar" => "تسجيل الشركة",
        _ => "Register Company"
    };

    string backToList = lang switch
    {
        "fa" => "بازگشت به لیست",
        "en" => "Back to List",
        "ru" => "Назад к списку",
        "tr" => "Listeye Dön",
        "ar" => "العودة إلى القائمة",
        _ => "Back to List"
    };
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- هدر فرم -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full mb-6 shadow-lg">
                <i class="fas fa-building text-3xl text-white"></i>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 mb-3">@companyRegistration</h1>
            <p class="text-gray-600 text-lg">
                @(lang == "fa" ? "اطلاعات شرکت جدید را وارد نمایید" :
                                "Enter the details of the new company")
            </p>
        </div>

        <!-- فرم ثبت شرکت -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
            <form method="post" class="space-y-6">
                <!-- فیلد نام شرکت -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-700">
                        <i class="fas fa-building ml-2"></i>
                        @companyName
                    </label>
                    <input asp-for="Title"
                           placeholder="@companyNamePlaceholder"
                           class="w-full border-2 border-gray-300 rounded-xl p-4 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none transition-all duration-300 text-lg" />
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                <!-- فیلد شماره موبایل -->
                <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-700">
                        <i class="fas fa-phone ml-2"></i>
                        @mobileNumber
                    </label>
                    <input asp-for="Mobile"
                           placeholder="@mobilePlaceholder"
                           class="w-full border-2 border-gray-300 rounded-xl p-4 focus:border-green-500 focus:ring-2 focus:ring-green-200 focus:outline-none transition-all duration-300 text-lg dir-ltr text-left" />
                    <span asp-validation-for="Mobile" class="text-red-500 text-sm"></span>
                </div>

                <!-- دکمه‌های اقدام -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6">
                    <!-- دکمه ثبت -->
                    <button type="submit"
                            class="flex-1 bg-gradient-to-r from-green-500 to-emerald-600 text-white py-4 rounded-xl font-bold text-lg hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center group">
                        <i class="fas fa-check-circle ml-2 group-hover:rotate-12 transition-transform"></i>
                        @registerCompany
                    </button>

                    <!-- دکمه بازگشت -->
                    <a href="@Url.Action("Index", "Company")"
                       class="flex-1 bg-gradient-to-r from-gray-200 to-gray-300 text-gray-700 py-4 rounded-xl font-bold text-lg hover:from-gray-300 hover:to-gray-400 transition-all duration-300 shadow hover:shadow-md flex items-center justify-center group">
                        <i class="fas fa-arrow-right ml-2 group-hover:-translate-x-1 transition-transform"></i>
                        @backToList
                    </a>
                </div>
            </form>
        </div>

        <!-- کارت راهنما -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- نکات مهم -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-6 shadow-lg">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center ml-3">
                        <i class="fas fa-lightbulb text-blue-600"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800">
                        @(lang == "fa" ? "نکات مهم" : "Important Notes")
                    </h3>
                </div>
                <ul class="space-y-3 text-gray-600 text-sm">
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 ml-2 mt-1"></i>
                        <span>
                            @(lang == "fa" ? "نام شرکت باید واضح و کامل باشد" :
                                                        "Company name should be clear and complete")
                        </span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 ml-2 mt-1"></i>
                        <span>
                            @(lang == "fa" ? "شماره موبایل باید معتبر و فعال باشد" :
                                                        "Mobile number should be valid and active")
                        </span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 ml-2 mt-1"></i>
                        <span>
                            @(lang == "fa" ? "پس از ثبت، امکان ویرایش اطلاعات وجود دارد" :
                                                        "Information can be edited after registration")
                        </span>
                    </li>
                </ul>
            </div>

            <!-- اطلاع‌رسانی -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 shadow-lg">
                <div class="flex items-center mb-4">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center ml-3">
                        <i class="fas fa-bell text-green-600"></i>
                    </div>
                    <h3 class="text-lg font-bold text-gray-800">
                        @(lang == "fa" ? "اطلاع‌رسانی" : "Notification")
                    </h3>
                </div>
                <p class="text-gray-600 text-sm">
                    @(lang == "fa" ? "پس از ثبت شرکت، می‌توانید پیامک‌های اطلاع‌رسانی برای آن ارسال نمایید. سیستم از طریق شماره ثبت شده با شرکت در ارتباط خواهد بود." :
                                        "After registering the company, you can send notification SMS to it. The system will communicate with the company through the registered number.")
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* استایل‌های سفارشی */
    .dir-ltr {
        direction: ltr;
    }

    /* انیمیشن برای ورودی‌ها */
    input:focus {
        transform: translateY(-1px);
    }

    /* انیمیشن برای دکمه‌ها */
    button, a {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* استایل برای موبایل */
    @@media (max-width: 640px) {
        .text-4xl {
            font-size: 2rem;
        }

        .p-8 {
            padding: 1.5rem;
        }
    }
</style>