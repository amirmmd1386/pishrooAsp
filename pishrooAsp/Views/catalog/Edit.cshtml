@model Catalog

@{
    ViewData["Title"] = "ویرایش کاتالوگ";
    Layout = "_AdminLayout";

}

<div class="container mx-auto p-4 max-w-2xl">
    <h1 class="text-2xl font-bold mb-6">ویرایش کاتالوگ</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="Title" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <input asp-for="Title" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Title" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="block text-gray-700 text-sm font-bold mb-2"></label>
            <textarea asp-for="Description" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-xs italic"></span>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 text-sm font-bold mb-2">فایل فعلی</label>
            <p class="text-gray-600">@Model.OriginalFileName</p>
            <a asp-action="Download" asp-route-id="@Model.Id" class="text-blue-500 text-sm">دانلود فایل فعلی</a>
        </div>

        <div class="mb-4">
            <label for="newFile" class="block text-gray-700 text-sm font-bold mb-2">فایل جدید (اختیاری)</label>
            <input type="file" name="newFile" id="newFile" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span class="text-gray-600 text-xs italic">فرمت‌های مجاز: PDF, Word, JPG, PNG (حداکثر 10MB)</span>
            @if (ViewData.ModelState["newFile"]?.Errors?.Count > 0)
            {
                <span class="text-red-500 text-xs italic">@ViewData.ModelState["newFile"].Errors[0].ErrorMessage</span>
            }
        </div>

        <div class="mb-4">
            <label class="flex items-center">
                <input asp-for="IsActive" class="mr-2 leading-tight" />
                <span class="text-sm text-gray-700">فعال</span>
            </label>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                ذخیره تغییرات
            </button>
            <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
                بازگشت به لیست
            </a>
        </div>
    </form>
</div>