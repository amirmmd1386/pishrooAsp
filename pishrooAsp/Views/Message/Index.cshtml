@using pishrooAsp.Models.ProductRequest
@model IEnumerable<message>

@{
    ViewData["Title"] = "مدیریت پیام ها";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">مدیریت پیام ها</h1>
        <a asp-action="Create" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-200">
            ایجاد پیام جدید
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            ID
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            پیام
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            عملیات
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition duration-150">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                @item.Id
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">
                                @item.Message
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2 space-x-reverse">
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900 ml-2">مشاهده</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 ml-2">ویرایش</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>