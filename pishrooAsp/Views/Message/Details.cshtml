@using pishrooAsp.Models.ProductRequest
@model message

@{
    ViewData["Title"] = "جزئیات پیام";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">جزئیات پیام</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <dl class="grid grid-cols-1 gap-4">
            <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500">ID</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Id</dd>
            </div>
            <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500">پیام</dt>
                <dd class="mt-1 text-sm text-gray-900 whitespace-pre-line">@Model.Message</dd>
            </div>
        </dl>

        <div class="mt-6 flex items-center space-x-4 space-x-reverse">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition duration-200">
                ویرایش
            </a>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition duration-200">
                بازگشت به لیست
            </a>
        </div>
    </div>
</div>