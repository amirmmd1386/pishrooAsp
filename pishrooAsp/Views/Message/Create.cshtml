@using pishrooAsp.Models.ProductRequest
@model message

@{
    ViewData["Title"] = "ایجاد پیام جدید";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mx-auto px-4 py-8 max-w-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">ایجاد پیام جدید</h1>

    <!-- نمایش پیام موفقیت -->
    @if (TempData["Success"] != null)
    {
        <div class="mb-4 p-4 rounded-lg bg-green-50 border border-green-200 text-green-800 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            @TempData["Success"]
        </div>
    }

    <!-- نمایش پیام خطا -->
    @if (TempData["Error"] != null)
    {
        <div class="mb-4 p-4 rounded-lg bg-red-50 border border-red-200 text-red-800 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            @TempData["Error"]
        </div>
    }

    <div class="bg-white shadow-md rounded-lg p-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="Message" rows="4"
                          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="متن پیام خود را وارد کنید..."></textarea>
                <span asp-validation-for="Message" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex items-center justify-between space-x-4 space-x-reverse">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg transition duration-200">
                    ایجاد پیام
                </button>
                <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition duration-200">
                    بازگشت به لیست
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}